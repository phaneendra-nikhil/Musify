<div class="search-bar">
  <span class="material-symbols-rounded leading-icon">
    search
  </span>
  <img
    src="/images/logo.svg"
    width="97"
    height="24"
    alt="Musify-logo"
    class="logo"
    data-logo
  />
  <form action="/search" method="post" class="search-form">
    <label for="search" class="sr-only">What do you want to listen to?</label>
    <input
      type="search"
      name="query"
      id="search"
      placeholder="What do you want to listen to?"
      value="<%= locals.query%>"
      class="search-field body-large"
      data-search-field
    />
  </form>

  <% const { url = '/images/avatar.png', width = 30, height = 30 } =
  locals.images.find(item => item.width === 64) || {} %>

  <div class="menu-wrapper" data-menu-wrapper>
    <button
      class="icon-btn"
      aria-label="My Profile"
      data-ripple
      data-menu-toggler
    >
      <img
        src="<%=url%>"
        width="<%=width%>"
        height="<%=height%>"
        alt="<%=locals.display_name%> profile"
        class="avatar"
      />

      <div class="state-layer"></div>
    </button>

    <%- include('./menu') %>
  </div>

  <%- include('./icon_btn',{
    variant: 'clear',
    icon: 'close',
    dataAttr: 'data-search-clear'
  })%>
</div>
